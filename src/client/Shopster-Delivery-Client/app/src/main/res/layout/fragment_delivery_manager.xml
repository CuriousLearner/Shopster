<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.co.shopster.shopster_delivery_client.fragments.DeliveryManagerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        >

        <Button
            android:visibility="gone"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btn_refresh"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="190dp"
            android:text="@string/label_refresh"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="80dp"
            android:id="@+id/text_delivery_status"
            android:text="@string/placeholder_delivery_status"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_verify_delivery"
            android:visibility="gone"
            android:text="@string/label_verify_delivery"
            />


    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/fab_refresh"
        android:src="@drawable/refresh_white"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="100dp"
        />

</FrameLayout>
