<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.co.shopster.shopster.activities.OrderSummaryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="@string/label_order_id"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_order_id"
            android:textSize="20sp"
            android:text="@string/placeholder_dots"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="@string/label_order_price"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_order_price"
            android:textSize="20sp"
            android:text="@string/placeholder_dots"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="@string/label_order_status"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/text_order_status"
            android:textSize="20sp"
            android:text="@string/placeholder_dots"
            />

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/btn_refresh"-->
            <!--android:text="@string/label_refresh"-->
            <!--android:visibility="gone"-->
            <!--/>-->

        <!-- Flat refresh -->
        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_refresh"
            android:layout_marginTop="0dp"
            android:textColor="@color/white"
            android:text="@string/label_refresh"
            android:visibility="gone"
            fbutton:buttonColor="@color/fbutton_color_carrot"
            fbutton:shadowColor="@color/fbutton_color_carrot"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_delivery_selection"
            >

            <!--<Button-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:id="@+id/btn_take"-->
                <!--android:visibility="gone"-->
                <!--android:text="@string/label_take_package"-->
                <!--/>-->
            <!-- Flat take -->
            <info.hoang8f.widget.FButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/btn_take"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:text="@string/label_take_package"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                fbutton:buttonColor="@color/fbutton_color_carrot"
                fbutton:shadowColor="@color/fbutton_color_carrot"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                />


            <!--<Button-->
                <!--android:layout_width="150dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginLeft="50dp"-->
                <!--android:id="@+id/btn_deliver"-->
                <!--android:visibility="gone"-->
                <!--android:text="@string/label_deliver"-->
                <!--/>-->

            <!-- Flat deliver -->
            <info.hoang8f.widget.FButton
                android:layout_width="155dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/btn_deliver"
                android:visibility="gone"
                android:text="@string/label_deliver"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                fbutton:buttonColor="@color/fbutton_color_carrot"
                fbutton:shadowColor="@color/fbutton_color_carrot"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="5dp"
                fbutton:cornerRadius="5dp"
                />


        </LinearLayout>

        <!--<Button-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/btn_pay"-->
            <!--android:text="@string/label_pay"-->
            <!--/>-->

        <!-- Flat pay -->
        <info.hoang8f.widget.FButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:id="@+id/btn_pay"
            android:visibility="visible"
            android:textColor="@color/white"
            android:text="@string/label_pay"
            fbutton:buttonColor="@color/fbutton_color_carrot"
            fbutton:shadowColor="@color/fbutton_color_carrot"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            />

    </LinearLayout>



</RelativeLayout>
